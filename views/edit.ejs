<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="EnriqueJ, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.84.0">
    <title>Register Template · </title>
    <!-- BootS CSS Link -->
    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/sign-in/">
    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="css/sigin.css" rel="stylesheet">
    <style>
        body {
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: rgb(255, 255, 258, 0.95);
        }
    </style>
</head>

<body class="text-center">

    <div class="container">
        <div class="row">
            <% if (user) { %>
            <div class="col-lg-12 shadow-lg p-3 mb-5">
                <div class="card-header bg-primary text-white">EDITAR DATOS DE USUARIO.</div>

                <div class="card-body text-primary">
                    <form action="/register" method="POST">
                        <input id ="id" name = "id" value ="<%= user.id %>" hidden>

                        <div class="mb-3">
                            <label for="name" class="form-label">Nombre Completo: </label>
                            <input id="name" name="name" type="text" class="form-control"
                                placeholder="Nombre Completo del Usuario." value="<%= user.user %>" maxlength="40">
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Télefono: </label>
                            <input id="phone" name="phone" type="text" class="form-control" placeholder="Télefono."
                            value="<%= user.phone%>"    maxlength="10">
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Usuario </label>
                            
                            <input id="user" name="user" type="text" class="form-control" placeholder="Nombre@Usuario" value="<%= user.name %>" maxlength="25">
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Permisos: </label>
                            <select id="rol" name="rol" class="form-select">
                                <option <%= user.rol=="admin" ? "selected" : %> value="admin" selected> Admin</option>
                                <option <%= user.rol=="Agente_lider" ? "selected" : '' %> value="Agente_lider"> Agente Lider</option>
                                <option <%= user.rol=="Agente_Escritor" ? "selected" : '' %> value="Agente_Escritor">Agente Escritor</option>
                                <option <%= user.rol=="Agente_lector" ? "selected" : '' %> value="Agente_Lector">Agente Lector</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Password: </label>
                            <input id="pass" name="pass" class="form-control" placeholder="Password." value="<%= user.pass %>" maxlength="10">
                        </div>

                        <div class="card-footer bg-trasparent borde-primary">
                            <a href="/" type="button" class="btn btn-secondary">Cancelar </a>
                            <button type="submit" class="btn btn-primary">REGISTRAR </button>

                        </div>
                    </form> <% } %>
                </div>

            </div>
        </div>
        
        
</body>
<script src="js/bootstrap.bundle.min.js"></script>


</html>