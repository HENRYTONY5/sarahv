</main>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<% if(alert) { %>
  
  <script>
    Swal.fire({
      
        title: '<%= alertTitle %>',
        text: '<%= alertMessage %>',
        icon: '<%= alertIcon %>',
        showCancelButton: false,
        timer: '2000',

    
    }).then(( ) => {
      window.location = '/<%= ruta %>'
    })
  </script>
  
  <% } %>
