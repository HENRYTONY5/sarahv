  <body class="text-center">
    
<main class="form-signin text-center shadow-lg p-3 mb-5">
  <form id="formLogin" action ="/login" method="POST">
    <img class="mb-8" src="img/logo0.png" alt="" width="122" height="87">
    <h1 class="h3 mb-3 fw-normal">INICIAR SESIÓN.</h1>

    <div class="form-floating md-5">
      <input type="text" class="form-control" id="user" name="user" placeholder="Usuario@" maxlength="25">
      <label for="user">Cuenta de Usuario: </label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="pass" name="pass" placeholder="Password" maxlength="10">
      <label for="pass">Password</label>
    </div>

    <!-- <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label> </div>-->
    
    <button class="w-100 btn btn-lg btn-primary" type="submit">Iniciar sesión.</button>
  </form>
  <br>
  <a href="/register" class="w-100 btn btn-lg btn-bd-secondary rounded-md " type="submit">Registrarse. </a>

      
